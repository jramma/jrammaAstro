---
interface Props {
  title: string;
  contents: Post[];
}
type Post = {
  title: string;
  content: string;
  href: string;
};
import Card from "../Card.astro";
const { title, contents } = Astro.props;
---

<div class="flex flex-col w-full dark:text-white pl-12 pr-6 md:flex-row">
  <div class="w-[10%] flex flex-col justify-end">
    <h3 class="transform md:-rotate-90  mb-6 rotate-0 text-2xl whitespace-nowrap">{title}</h3>
  </div>
  
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 w-full">
    {
      contents.map((element) => (
        <Card
          title={element.title}
          body={element.content}
          href={element.href}
        />
      ))
    }
  </div>
</div>
