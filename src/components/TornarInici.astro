---
import { Icon } from "astro-icon/components";
import { slide } from "astro:transitions";
---

<div
  transition:animate={slide({ duration: "1s" })}
  class="absolute flex dark:text-white right-4 top-1/2"
>
<Icon class="mr-2 mt-[0.6vh]" name={"arrow"} />
  <a
    class="z-30 group dark:text-white transition duration-300"
    href="/"
    >Tornar al inici<span
      class="block max-w-0 group-hover:max-w-full transition-all duration-500 h-0.5 dark:bg-white bg-black"
    ></span></a
  >
</div>
