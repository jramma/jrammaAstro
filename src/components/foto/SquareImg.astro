---
import { Image } from "astro:assets";
import imgSrc from "/assets/images/horizonte/img-1.jpg";
---

<div class="square">
  <Image src={imgSrc} alt="Astro Odyssey" />
</div>
<style>
  .square {
    display: flex;
  }
  .square img {
    width: 100%;
    height: 100%;
    max-height: 80vh;
    object-fit: cover;
    border-radius: var(--theme-shape-radius);
  }
</style>