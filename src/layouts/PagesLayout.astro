---
interface Props {
  title: string;
}
import { ViewTransitions, slide } from "astro:transitions";
const { title } = Astro.props;
import { Icon } from "astro-icon/components";
import Theme from "../components/Theme.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap"
      rel="stylesheet"
    />
    <ViewTransitions />
  </head>
  <body class="dark:bg-black dark:text-white">
    <header class="fixed z-50">
      <div>
        <a
          class="z-50 text-left text-4xl absolute top-8 left-8 hover-effect"
          href="/"
          ><h1 transition:animate={slide({ duration: "1s" })}>
            @{title.toUpperCase()}
          </h1>
        </a>
        <div class="absolute top-20 left-12 flex gap-6">
          <Theme />
          <a href="/"><Icon name="menu" class="mt-2" /></a>
        </div>
      </div>
      <slot />
      <footer class="border-t flex justify-between pl-8 pr-8 pt-8 pb-12">
        <div>
          <p>UX and UI made with ‚ù§Ô∏è by Jramma</p>
          <p class="mt-2">üìç Barcelona, Catalunya</p>
          <p class="mt-8">Software dev, skipper & philosopher.</p>
        </div>
        <!-- <div class="text-white text-right">
        <p>Improved with ‚ù§Ô∏è by Mortensen</p>
        <p class="mt-2">Torres i Amat 21, 3r<br />08001 Barcelona</p>
      </div> -->
        <div class="text-right flex gap-8">
          <a href="https://www.instagram.com/jramma1/">
            <Icon class="h-6 w-6" name="insta" />
          </a>
          <a href="https://t.me/jramma">
            <Icon class="h-6 w-6" name="telegram" />
          </a>
          <a href="https://www.linkedin.com/in/jramma/">
            <Icon class="h-6 w-6" name="linkedin" />
          </a>
        </div>
      </footer>
      <style is:global>
        :root {
          --accent: 136, 58, 234;
          --accent-light: 224, 204, 250;
          --accent-dark: 49, 10, 101;
          --accent-gradient: linear-gradient(
            45deg,
            rgb(var(--accent)),
            rgb(var(--accent-light)) 30%,
            white 60%
          );
          --font-family: "Roboto Mono", monospace;
        }

        body {
          font-family: var(--font-family);
        }
        html {
          font-family: var(--font-family);

          background-size: 224px;
        }
        a {
          position: relative;
          text-decoration: none;
          overflow: hidden;
        }

        a::after {
          content: "";
          position: absolute;
          width: 0;
          height: 2px;
          bottom: -2px;
          left: 0;
          background-color: #fff;
          transition: width 0.4s;
        }

        a:hover::after {
          width: 100%;
        }
      </style>
    </header>
  </body>
</html>
