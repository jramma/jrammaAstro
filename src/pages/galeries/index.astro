---
import Layout from "../../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import { fade, slide } from 'astro:transitions';
import Theme from "../../components/Theme.astro"
---

<Layout title="Jramma">
  <main class="dark:text-white h-screen mb-2">
    <div
      transition:animate={slide({ duration: "1s" })}
      class="absolute right-0 top-1/2"
    >
      <a class="justify-between flex" href="/"
        ><Icon class="mr-2 mt-[0.6vh]" name={"arrow"} /><p>
          Tornar al inici
        </p></a
      >
    </div>
    <div class="absolute top-1/2 left-0 w-full h-px bg-black dark:bg-white"></div>
    <div class="absolute right-8 top-8">
      <Theme />
    </div>
    <div class="h-[50%] flex flex-col justify-end mb-0">
      <ul class="flex flex-col sm:flex-row gap-2 sm:gap-12 w-full justify-center items-center mb-8 sm:mb-4">
        <li transition:animate={fade({ duration: '0.2s' })}>
          <a href="/galeria/barcelona">Barcelona</a>
        </li><li transition:animate={fade({ duration: '0.5s' })}>
          <a href="/galeria/horitzo">Horitzó</a>
        </li>
      </ul>
    </div>
    <div class="h-[50%]">
      <div class="flex flex-col justify-center items-center mt-8">
        <div class="max-w-2xl"  transition:animate={fade({ duration: '1.5s' })}>
          <p class="max-w-xl text-center">© 2024 Jramma</p>
          
        </div>
      </div>
    </div>
   
  </main>
</Layout>


